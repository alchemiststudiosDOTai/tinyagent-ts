{
  "name": "tinyagent-ts",
  "version": "1.0.0",
  "description": "Minimal TypeScript Agent Framework",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "dev": "ts-node-dev --respawn src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"*.js\""
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "reflect-metadata": "^0.2.1",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/reflect-metadata": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
